/* @var $this Mage_Reports_Block_Product_Viewed */
?>
<div class="block block-list block-viewed">
    <div class="block-title">
        <strong><span><?php echo $this->__('Recently Viewed Products') ?></span></strong>
    </div>
    <div class="block-content">
    <?php if ($_products = $this->getRecentlyViewedProducts()): ?>
		<?php if ($this->getCount() > 0): ?>
            <ol id="recently-viewed-items">
            <?php foreach ($_products as $_item): ?>
                <li class="item">
                    <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_item, 'small_image'), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(50); ?>" width="50" height="50" alt="<?php echo $this->stripTags($this->getImageLabel($_item, 'small_image'), null, true) ?>" /></a>
                
                    <p class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?></a></p>
                    <?php echo $this->getPriceHtml($_item, true) ?>
                </li>
            <?php endforeach; ?>
            </ol>
            <script type="text/javascript">decorateList('recently-viewed-items');</script>
        <?php endif; ?>
    <?php else : ?>
    	<p class="empty"><?php echo $this->__("You haven't viewed any other products yet.") ?></p>
    <?php endif; ?>
    </div>
</div>