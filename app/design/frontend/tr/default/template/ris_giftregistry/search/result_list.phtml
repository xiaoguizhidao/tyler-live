/* @var $this RIS_GiftRegistry_Block_Search_Result */
?>
<div class="gift_registry-list">
    <?php if ($this->hasGiftRegistries()): ?>
        <table class="data-table" id="giftregistry-table">
        <col />
        <col />
        <col />
        <col />
        <col />
            <thead>
                <tr>
                    <th class="a-left"><?php echo $this->__('Registry') ?></th>
                    <th class="a-left"><?php echo $this->__('Owner') ?></th>
                    <th class="a-left"><span class="nobr"><?php echo $this->__('Expires on') ?></span></th>
                    <th class="a-left"><span class="nobr"><?php echo $this->__('Registry Type') ?></span></th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            <?php foreach ($this->getGiftRegistries() as $_gift_registry): ?>
                <tr>
                    <td class="a-left">
                        <p><?php echo $this->escapeHtml($_gift_registry->getTitle()) ?></p>
                    </td>
                    <td class="a-left">
                        <p><?php echo $this->escapeHtml($_gift_registry->getCustomer()->getName()) ?></p>
                    </td>
                    <td class="a-left">
                        <p><?php echo $this->getFormatedDate($_gift_registry->getData('expires_on')) ?></p>
                    </td>
                    <td class="a-left">
                        <p><span class="gift-registry-type-<?php echo $_gift_registry->getType();?>"><?php echo $this->__('%s Registry', ucfirst($_gift_registry->getType())) ?></span></p>
                    </td>
                    <td valign="middle" class="a-right">
                        <button type="button" title="<?php echo $this->__('View') ?>" class="button" onclick="setLocation('<?php echo $this->escapeUrl($this->helper('ris_giftregistry')->getSharedUrl(array('code'=>$_gift_registry->getSharingCode()))) ?>')"><span><span><?php echo $this->__('View') ?></span></span></button>
                    </td>
                </tr>
            <?php endforeach ?>
            </tbody>
        </table>
        <script type="text/javascript">decorateTable('giftregistry-table')</script>
    <?php else: ?>
        <p><?php echo $this->__('No gift registries were found using your search criteria.') ?></p>
    <?php endif ?>
</div>